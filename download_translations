#!/bin/bash

./update

./backup_credits

cd kf5-trunk
crowdin download -b kf5-trunk

cd ../kf5-stable
crowdin download -b kf5-stable

cd ..

for po in $(find -name "trojita_common.po"); do
    cp "head" "po_tmp"
    tail -n +4 $po >> "po_tmp"
    mv "po_tmp" $po
done

for po in $(find -name "*.po"); do
    msgcat -w 79 -o $po $po
done

./restore_credits

echo "Done!"
